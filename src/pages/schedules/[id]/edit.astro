---
import ScheduleEdit from "@/components/schedules/edit/ScheduleEdit.vue";
import Layout from "@/layouts/Layout.astro";
import Authorized from "@/layouts/Authorized.astro";
import { getSchedule } from "@/pages/api/api";

export interface Params {
	id: string;
}

const { id } = Astro.params;

const schedule = await getSchedule(Astro.request, id)
---

<Layout title={`Edit schedule ${schedule.name}`}>
  <Authorized>
    <ScheduleEdit
      client:only 
      schedule={schedule}
    />
  </Authorized>
</Layout>